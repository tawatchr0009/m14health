<?init class="org.zkoss.zk.ui.util.Composition" arg0="/WEB-INF/template/layout02.zul"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<zk>
	<style>
		.ncds-name-box {
		    border: 0px;
		    border-top-left-radius: 5px;
		    border-top-right-radius: 5px;
		    background-color: #FBFCFE;
		    padding: 10px;
		    font-family: zHealthFont;
		}
		.ncds-content-box {
		    border: 0px;
		    border-bottom-left-radius: 5px;
		    border-bottom-right-radius: 5px;
		    background-color: #F0F5FB;
		    padding: 0px;"
		}
		
	</style>
	<vlayout self="@define(content)" vflex="1" hflex="1" apply="org.zkoss.bind.BindComposer" viewModel="@id('vm') @init('com.healthrecord.mobile.vm.NCDsVM')" 
		>
		<label value="โรคที่มีความเสี่ยง" zclass="zHealthFont"/>
		
		<zk forEach="${vm.ncds}">
		  	<separator height="5px"/>
			<vbox  hflex="1">
				<hbox hflex="1" zclass="ncds-name-box">
				<label value="${c:cat4(each.name_th,' ( ',each.name_en,' )')}" zclass="zHealthFont" onClick='Executions.sendRedirect("/ncds/dyslipidemia/index.zul")'/>
				</hbox>
				<hbox hflex="1"  zclass="ncds-content-box">
					<zk forEach="${each.indicators}">
						<image content="${vm.getIndicatorImage(each)}" height="60px" onClick='Executions.sendRedirect("/ncds/dyslipidemia/index.zul")'/>
					</zk>	
					
				</hbox>
			</vbox>
		</zk>
		
	</vlayout>
	
	
</zk>